{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": [
    "vitest.config.ts",
    "playwright.config.ts",
    "*.config.ts",
    "tests/**/*.ts",
    "test-utils/**/*.ts"
  ]
}

